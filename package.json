{
    "name": "@ivanmaxlogiudice/eslint-config",
    "version": "3.0.0-beta.8",
    "packageManager": "bun@1.1.26",
    "description": "Personal ESLint config",
    "type": "module",
    "keywords": ["eslint-config"],
    "license": "MIT",
    "homepage": "https://github.com/ivanmaxlogiudice/eslint-config#readme",
    "bugs": {
        "url": "https://github.com/ivanmaxlogiudice/eslint-config/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ivanmaxlogiudice/eslint-config.git"
    },
    "files": ["bin", "dist"],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.js"
        }
    },
    "bin": "./bin/index.js",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "stub": "tsup --format esm",
        "dev": "config-inspector --config eslint.config.ts",
        "build": "bun run typegen && tsup --format esm --clean --dts",
        "test": "vitest",
        "lint": "eslint --flag unstable_ts_config --fix .",
        "typegen": "bun scripts/typegen.ts",
        "prepack": "bun run build",
        "release": "bumpp && npm publish",
        "typecheck": "tsc --noEmit"
    },
    "peerDependencies": {
        "@unocss/eslint-plugin": "^0.61.9",
        "eslint": "^9.9.0",
        "eslint-plugin-markdown": "^5.1.0",
        "eslint-plugin-regexp": "^2.6.0",
        "eslint-plugin-vue": "^9.27.0",
        "eslint-plugin-yml": "^1.14.0",
        "vue-eslint-parser": "^9.4.3",
        "yaml-eslint-parser": "^1.2.3"
    },
    "peerDependenciesMeta": {
        "@unocss/eslint-plugin": {
            "optional": true
        },
        "eslint-plugin-markdown": {
            "optional": true
        },
        "eslint-plugin-regexp": {
            "optional": true
        },
        "eslint-plugin-vue": {
            "optional": true
        },
        "eslint-plugin-yml": {
            "optional": true
        },
        "vue-eslint-parser": {
            "optional": true
        },
        "yaml-eslint-parser": {
            "optional": true
        }
    },
    "dependencies": {
        "@clack/prompts": "^0.7.0",
        "@eslint-community/eslint-plugin-eslint-comments": "^4.4.0",
        "@ivanmaxlogiudice/gitignore": "^0.0.2",
        "@stylistic/eslint-plugin": "^2.6.4",
        "@typescript-eslint/eslint-plugin": "^8.3.0",
        "@typescript-eslint/parser": "^8.3.0",
        "@vitest/eslint-plugin": "^1.1.0",
        "eslint-plugin-antfu": "^2.3.6",
        "eslint-plugin-import-x": "^4.1.0",
        "eslint-plugin-jsdoc": "^50.2.2",
        "eslint-plugin-jsonc": "^2.16.0",
        "eslint-plugin-n": "^17.10.2",
        "eslint-plugin-no-only-tests": "^3.3.0",
        "eslint-plugin-perfectionist": "^3.3.0",
        "eslint-plugin-unicorn": "^55.0.0",
        "eslint-plugin-unused-imports": "^4.1.3",
        "globals": "^15.9.0",
        "jsonc-eslint-parser": "^2.4.0",
        "local-pkg": "^0.5.0",
        "picocolors": "^1.0.1",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@eslint/config-inspector": "^0.5.4",
        "@stylistic/eslint-plugin-migrate": "^2.6.4",
        "@types/eslint": "^9.6.1",
        "@types/node": "^22.5.1",
        "@types/yargs": "^17.0.33",
        "@unocss/eslint-plugin": "^0.62.3",
        "bumpp": "^9.5.2",
        "bun-types": "^1.1.26",
        "eslint": "^9.9.1",
        "eslint-plugin-markdown": "^5.1.0",
        "eslint-plugin-regexp": "^2.6.0",
        "eslint-plugin-vue": "^9.27.0",
        "eslint-plugin-yml": "^1.14.0",
        "eslint-typegen": "^0.3.1",
        "lint-staged": "^15.2.9",
        "simple-git-hooks": "^2.11.1",
        "tsup": "^8.2.4",
        "typescript": "^5.5.4",
        "unbuild": "^2.0.0",
        "vitest": "^2.0.5",
        "vue-eslint-parser": "^9.4.3",
        "yaml-eslint-parser": "^1.2.3"
    },
    "simple-git-hooks": {
        "pre-commit": "bunx lint-staged"
    },
    "lint-staged": {
        "*": "eslint --flag unstable_ts_config --fix"
    }
}
