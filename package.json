{
    "name": "@ivanmaxlogiudice/eslint-config",
    "version": "1.0.31",
    "packageManager": "pnpm@9.0.4",
    "description": "Personal ESLint config",
    "type": "module",
    "keywords": [
        "eslint-config"
    ],
    "license": "MIT",
    "homepage": "https://github.com/ivanmaxlogiudice/eslint-config#readme",
    "bugs": {
        "url": "https://github.com/ivanmaxlogiudice/eslint-config/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ivanmaxlogiudice/eslint-config.git"
    },
    "files": [
        "bin",
        "dist"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "bin": "./bin/index.js",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "stub": "tsup --format esm",
        "dev": "tsup --format esm,cjs --watch & pnpx @eslint/config-inspector",
        "build": "pnpm run typegen && tsup --format esm,cjs --clean --dts",
        "build:inspector": "pnpm build && pnpx @eslint/config-inspector build",
        "lint": "pnpm run stub && eslint .",
        "typegen": "esno scripts/typegen.ts",
        "prepack": "pnpm run build",
        "release": "bumpp && pnpm publish",
        "test": "vitest",
        "typecheck": "tsc --noEmit",
        "prepare": "simple-git-hooks"
    },
    "peerDependencies": {
        "@unocss/eslint-plugin": ">=0.57.0",
        "eslint": ">=8.40.0",
        "eslint-plugin-format": ">=0.1.0"
    },
    "peerDependenciesMeta": {
        "@unocss/eslint-plugin": {
            "optional": true
        },
        "eslint-plugin-format": {
            "optional": true
        }
    },
    "dependencies": {
        "@antfu/install-pkg": "^0.3.2",
        "@clack/prompts": "^0.7.0",
        "@stylistic/eslint-plugin": "^1.7.2",
        "@typescript-eslint/eslint-plugin": "^7.7.0",
        "@typescript-eslint/parser": "^7.7.0",
        "detect-indent": "^7.0.1",
        "eslint-config-flat-gitignore": "^0.1.5",
        "eslint-merge-processors": "^0.1.0",
        "eslint-plugin-antfu": "^2.1.2",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import-x": "^0.5.0",
        "eslint-plugin-jsdoc": "^48.2.3",
        "eslint-plugin-jsonc": "^2.15.1",
        "eslint-plugin-markdown": "^4.0.1",
        "eslint-plugin-n": "^17.2.1",
        "eslint-plugin-no-only-tests": "^3.1.0",
        "eslint-plugin-perfectionist": "^2.9.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-unicorn": "^52.0.0",
        "eslint-plugin-unused-imports": "^3.1.0",
        "eslint-plugin-vitest": "^0.5.3",
        "eslint-plugin-vue": "^9.25.0",
        "eslint-plugin-yml": "^1.14.0",
        "eslint-processor-vue-blocks": "^0.1.2",
        "eslint-typegen": "^0.2.3",
        "globals": "^15.0.0",
        "jsonc-eslint-parser": "^2.4.0",
        "local-pkg": "^0.5.0",
        "parse-gitignore": "^2.0.0",
        "picocolors": "^1.0.0",
        "vue-eslint-parser": "^9.4.2",
        "yaml-eslint-parser": "^1.2.2",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@eslint/config-inspector": "^0.4.6",
        "@stylistic/eslint-plugin-migrate": "^1.7.2",
        "@types/eslint": "^8.56.10",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^20.12.7",
        "@types/prompts": "^2.4.9",
        "@types/yargs": "^17.0.32",
        "@unocss/eslint-plugin": "^0.59.4",
        "bumpp": "^9.4.0",
        "eslint": "^9.1.0",
        "eslint-plugin-format": "^0.1.1",
        "esno": "^4.7.0",
        "execa": "^8.0.1",
        "fast-glob": "^3.3.2",
        "fs-extra": "^11.2.0",
        "lint-staged": "^15.2.2",
        "simple-git-hooks": "^2.11.1",
        "tsup": "^8.0.2",
        "typescript": "^5.4.5",
        "vitest": "^1.5.0",
        "vue": "^3.4.23"
    },
    "engines": {
        "node": ">=18.12.0"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
