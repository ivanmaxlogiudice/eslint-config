{
    "name": "@ivanmaxlogiudice/eslint-config",
    "type": "module",
    "version": "2.0.2",
    "packageManager": "pnpm@9.6.0",
    "description": "Personal ESLint config",
    "license": "MIT",
    "homepage": "https://github.com/ivanmaxlogiudice/eslint-config#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ivanmaxlogiudice/eslint-config.git"
    },
    "bugs": {
        "url": "https://github.com/ivanmaxlogiudice/eslint-config/issues"
    },
    "keywords": [
        "eslint-config"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": "./bin/index.js",
    "files": [
        "bin",
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "stub": "tsup --format esm",
        "dev": "pnpx @eslint/config-inspector --config eslint.config.ts",
        "build": "tsup --format esm,cjs --clean --dts",
        "build:inspector": "pnpm build && pnpx @eslint/config-inspector build",
        "lint": "pnpm run stub && eslint . --fix",
        "prepack": "pnpm run build",
        "release": "bumpp && pnpm publish",
        "test": "vitest",
        "typecheck": "tsc --noEmit",
        "prepare": "simple-git-hooks"
    },
    "peerDependencies": {
        "@eslint-react/eslint-plugin": ">=1.6.0",
        "eslint": ">=9.8.0",
        "eslint-plugin-astro": ">=1.2.3",
        "eslint-plugin-format": ">=0.1.2",
        "eslint-plugin-react-hooks": ">=4.6.2",
        "eslint-plugin-react-refresh": ">=0.4.9",
        "eslint-plugin-solid": ">=0.14.1",
        "eslint-plugin-svelte": ">=2.43.0",
        "svelte-eslint-parser": ">=0.41.0"
    },
    "peerDependenciesMeta": {
        "@eslint-react/eslint-plugin": {
            "optional": true
        },
        "eslint-plugin-astro": {
            "optional": true
        },
        "eslint-plugin-format": {
            "optional": true
        },
        "eslint-plugin-react-hooks": {
            "optional": true
        },
        "eslint-plugin-react-refresh": {
            "optional": true
        },
        "eslint-plugin-solid": {
            "optional": true
        },
        "eslint-plugin-svelte": {
            "optional": true
        },
        "svelte-eslint-parser": {
            "optional": true
        }
    },
    "dependencies": {
        "@antfu/eslint-config": "^2.24.0",
        "@clack/prompts": "^0.7.0",
        "picocolors": "^1.0.1",
        "yargs": "^17.7.2"
    },
    "devDependencies": {
        "@eslint-react/eslint-plugin": "^1.6.0",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^22.0.0",
        "@types/prompts": "^2.4.9",
        "@types/yargs": "^17.0.32",
        "bumpp": "^9.4.1",
        "bundle-require": "^5.0.0",
        "eslint": "^9.8.0",
        "eslint-plugin-astro": "^1.2.3",
        "eslint-plugin-format": "^0.1.2",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.9",
        "eslint-plugin-solid": "^0.14.1",
        "eslint-plugin-svelte": "^2.43.0",
        "esno": "^4.7.0",
        "execa": "^9.3.0",
        "fast-glob": "^3.3.2",
        "fs-extra": "^11.2.0",
        "lint-staged": "^15.2.7",
        "simple-git-hooks": "^2.11.1",
        "svelte": "^4.2.18",
        "svelte-eslint-parser": "^0.41.0",
        "tsup": "^8.2.3",
        "typescript": "^5.5.4",
        "vitest": "^2.0.4"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
