{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ESNext",

        /* Modules */
        "module": "ESNext",
        "moduleResolution": "Bundler",

        /* Type Checking */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Completeness */
        "skipLibCheck": true
    },
    "include": ["**/*.ts"],
    "exclude": [
        "./fixtures/**/*.*",
        "./_fixtures/**/*.*"
    ]
}
