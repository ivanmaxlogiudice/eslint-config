{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "baseUrl": ".",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "./fixtures/**/*.*"
    ]
}
